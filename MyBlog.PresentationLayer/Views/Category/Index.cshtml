@model List<MyBlog.EntityLayer.Concrete.Category>
@{
    Layout = null;
}
<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        @foreach(var item in Model)
        {
            <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="#" class="btn btn-outline-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/category/createcategory/" class="btn btn-success-primary">Yeni Kategori Girişi</a>
</div>