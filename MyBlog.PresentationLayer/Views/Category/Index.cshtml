@model List<MyBlog.EntityLayer.Concrete.Category>
@{
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}
<a href="~/lib/bootstrap/dist/css/bootstrap.min.css.map"></a>
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />



<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Bildirimler Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bildirimler</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Bildirim </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi</h4>
                        <p class="card-description">
                            Bildirimler ile ilgili işlemleri aşağıdaki gibi panelden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                  
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.CategoryId</td>
                                            <td>@item.CategoryName</td>
                                            <td><a href="#" class="btn btn-danger">Sil</a></td>
                                            <td><a href="#" class="btn btn-danger">Güncelle</a></td>

                                        </tr>

                                    }
                                </tbody>

                            </table>
                            <a href="/category/createcategory/" class="btn btn-success-primary">Yeni Kategori Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


