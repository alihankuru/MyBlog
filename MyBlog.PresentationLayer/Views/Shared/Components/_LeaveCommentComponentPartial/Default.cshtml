@using MyBlog.PresentationLayer.Areas.Admin.Models
@model CommentViewModel

<div class="single-post__leave__comment">
    <div class="widget__title">
        <h4>Leave a comment</h4>
    </div>
    <form action="post" asp-controller="Comment" asp-action="CreateComment" asp-area="Admin">
        <!-- assuming you have a CommentController with a Create action -->
        <input type="hidden" name="BlogId" value="@ViewBag.BlogId"> <!-- Hidden input to store BlogId -->
        <div class="input-list">
            <input type="text" name="Name" asp-for="Name">
            <input type="text" name="Email" asp-for="Email">
        </div>
        <textarea name="Message" asp-for="Message"></textarea>
        <button type="submit" class="site-btn">Submit</button>
    </form>
</div>