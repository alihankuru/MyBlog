@model LeaveACommentViewModel

<div class="single-post__leave__comment">
    <div class="widget__title">
        <h4>Leave a comment</h4>
    </div>
    <form method="post" action="/Comment/CreateComment">
        <!-- assuming you have a CommentController with a Create action -->
        <input type="hidden" asp-for="ArticleId"> <!-- Hidden input to store BlogId -->
        <div class="input-list">
            <input type="text" name="Name" asp-for="Name" placeholder="İsim Soyisim">
            <input type="text" name="Email" asp-for="Email" placeholder="Email">
        </div>
        <textarea name="Message" asp-for="Message" placeholder="Mesaj"></textarea>
        <button type="submit" class="site-btn">Gönder</button>
    </form>
</div>

