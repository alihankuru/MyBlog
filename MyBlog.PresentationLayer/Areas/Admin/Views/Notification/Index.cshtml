@model List<MyBlog.EntityLayer.Concrete.Notification>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Bildirimler Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bildirimler</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Bildirim </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi</h4>
                        <p class="card-description">
                            Bildirimler ile ilgili işlemleri aşağıdaki gibi panelden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Bildiirim Id</th>
                                        <th>Bildirim Başlığı</th>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.NotificationId</td>
                                            <td>@item.NotificationTitle</td>
                                            <td>@item.Description</td>
                                            <td>@item.Created</td>

                                            <td><a href="/Admin/Notification/DeleteNotification/@item.NotificationId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Admin/Notification/UpdateNotification/@item.NotificationId" class="btn btn-warning">Güncelle</a></td>

                                        </tr>

                                    }
                                </tbody>

                            </table>
                            <a href="/Admin/Notification/CreateNotification/" class="btn btn-success-primary">Yeni Bildirim Girişi</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


