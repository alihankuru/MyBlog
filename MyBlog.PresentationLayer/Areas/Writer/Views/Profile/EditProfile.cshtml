@model UserEditViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Form elements</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Blog Listem</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Yeni Blog </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Blog Ekleme Paneli</h4>
                        <p class="card-description">Aşağıdaki Alanları doldurunuz</p>
                        <form class="forms-sample" method="post" enctype="multipart/form-data">

                            <div class="form-group">
                                <label>Blog Başlığı</label>
                                <input type="text" class="form-control" asp-for="Name" />
                            </div>

                            <div class="form-group">
                                <label>Blog kabak Url</label>
                                <input type="text" class="form-control" asp-for="Surname" />
                            </div>

                            <div class="form-group">
                                <label>Blog Thumb Url</label>
                                <input type="text" class="form-control" asp-for="City" />
                            </div>

                            <div class="form-group">
                                <label>Fotoğrafınız</label>
                                <input type="file" class="form-control" asp-for="Image" />
                            </div>


                            <div class="form-group">
                                <label>Detaylar</label>
                                <input type="text" class="form-control" asp-for="Username" />
                            </div>


                            <div class="form-group">
                                <label>Detaylar</label>
                                <input type="text" class="form-control" asp-for="Email" />
                            </div>

                            <div class="form-group">
                                <label>Detaylar</label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" />
                            </div>
                            <div class="form-group">
                                <label>Şifreniz</label>
                                <input type="password" class="form-control" asp-for="Password" />
                            </div>
                        

                            <button type="submit" class="btn btn-primary mr-2"> Kaydet </button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>



