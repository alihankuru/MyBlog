@model List<MyBlog.EntityLayer.Concrete.Article>

@{
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">Blog Sayfası</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Bloglar</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Benim Bloglarım </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Blog Listesi</h4>
                        <p class="card-description">
                            Yazmış Olduğumuz blogları ilgili işlemleri aşağıdaki gibi panelden gerçekleştirebilirsiniz.
                        </p>
                        <div class="row">

                            <div class="input-group mb-3">

                                <form method="get" action="/Writer/Blog/MyBlogList" class="input-group mb-3">
                                    <div class="input-group mb-3">
                                        <input type="text" name="searchString" id="searchInput" class="form-control" placeholder="Blog başlığına göre Arama yapın...">
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary" type="submit" id="searchButton">Ara</button>
                                        </div>

                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Blog Id</th>
                                        <th>Başlık</th>
                                        <th>Kategori</th>
                                        <th>Tarih</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ArticleId</td>
                                            <td>@item.Title</td>
                                            <td>@item.Category.CategoryName</td>
                                            <td>@item.CreatedDate</td>
                                            <td><a href="/Writer/Blog/DeleteBlog/@item.ArticleId" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Writer/Blog/UpdateBlog/@item.ArticleId" class="btn btn-Warning">Güncelle</a></td>
                                            <td><a href="/Writer/Blog/CreateTagBlog/@item.ArticleId" class="btn btn-Info">Etiketler</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/Writer/Blog/CreateBlog" class="btn btn-Success">Yeni Blog Oluştur</a></td>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>